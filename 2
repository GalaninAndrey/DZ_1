using System;
using System.Data;

namespace Task2
{
    class ChangeMass 
    {
        static void ChangePosition(ref int[] array, int value) // ref - ссылка на массив 
        {
            int a = 0; 
            for (int i = 0; i < array.Length / 2 ; i++)
            {
                a = array[i];
                array[i] = array[value + i];
                array[value + i] = a;
            }
        }
        static void Main()
        {
            Console.WriteLine("Введите размерность массива:");
            int N           = int.Parse(Console.ReadLine()); // размерность массива
            int[] mass      = new int[N]; // массив
            Random random   = new Random(); // для рандомных значений
            Console.WriteLine("Исходный массив:");
            for (int i = 0; i < N; i++)
            {
                mass[i] = random.Next(0,100);
                Console.WriteLine(mass[i]);
            }
            if (N % 2 == 0)
            {
                ChangePosition(ref mass, N / 2);
            }
            else
            {
                ChangePosition(ref mass, N / 2 + 1);
            }
            Console.WriteLine("Итоговый массив:");
            for (int i = 0; i < N; i++)
            {
                Console.WriteLine(mass[i]);
            }
        }
    }
}
