using System;
namespace DZ1
{
    class IntputMass
    { 
        static void Insert(ref int[] array, int value, int ind) // ref - ссылка на массив 
        {
            int[] newArray = new int[array.Length + 1];
            newArray[ind] = value;

            for (int i = 0; i < ind; i++)
                newArray[i] = array[i];

            for (int i = ind; i < array.Length; i++)
                newArray[i + 1] = array[i];

            array = newArray;

        }
        static void Main()
        {
            Console.WriteLine("Введите число элементов массива:");
            int N = int.Parse(Console.ReadLine()); 

            Console.WriteLine("Введите число элеменов группы:");
            int M = int.Parse(Console.ReadLine());

            Console.WriteLine("Введите индекс:");
            int K = int.Parse(Console.ReadLine());

            int[] SourceArray = new int[N+M]; // Исходный массив с увеличенной паматью, для новых элементов 
            Random random = new Random(); // для заполения массива рандомными числами
            //заполняем исходный массив
            Console.WriteLine("Исходный массив:");
            for (int i = 0; i < N; i++)
            {
                SourceArray[i] = random.Next(0,100);
                Console.WriteLine(SourceArray[i]);
            }
            //выполняем вставку элементов
            for (int i = K; i < M+K; i++)
            {
                Insert(ref SourceArray, random.Next(0,100), i);
            }

            Console.WriteLine("Полученный массив");
            for (int i = 0; i < N + M; i++)
            {
                Console.WriteLine(SourceArray[i]);
            }
        }
    }
}
